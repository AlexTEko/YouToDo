<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        YouToDo
    </title>
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/loading-bar.min.css" type="text/css">
    <link rel="stylesheet" href="css/date.min.css" type="text/css">
        <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
</head>
<body ng-app="YouToDoApp">
    <nav class="navbar navbar-fixed-top" ng-controller="indexController">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="."><span class="glyphicon glyphicon-time" aria-hidden="true"></span> YouToDo</a>
            </div>
            <div>
                <ul class="nav navbar-nav" ng-cloak>
                    <li><a ng-show="authentication.isAuth && isAdmin()" ui-sref="admin"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Accounts</a></li>
                    <li><a ng-show="authentication.isAuth && isAdmin()" ui-sref="statistic"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Statistic</a></li>
                    <li><a ng-show="authentication.isAuth && !isUser() && !isAdmin()" ui-sref="projects"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> My Projects </a></li>
                    <li><a ng-show="authentication.isAuth && !isAdmin()" ui-sref="mytasks"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span> My Tasks <span class="badge">{{$root.counttasks}}</span></a></li>
                    <li class="dropdown" ng-hide="!authentication.isAuth">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-expanded="false"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>{{authentication.userName}}<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#" ng-click="logOut()"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <a href="https://github.com/AlexTEko/YouToDo">
                <img style="position: absolute; top: 0; right: 0; border: 0;"
                     src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67"
                     alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png">
            </a>
        </div>
    </nav>
    @RenderBody()
    <hr>
    <div class="text-center text-disabled">
        <small>ELTECH - 2015</small>
    </div>

    <script src="https://code.jquery.com/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.min.js"
            type="text/javascript"></script>
    <script src="Scripts/angular-local-storage.min.js" type="application/javascript"></script>
    <script src="Scripts/app.js" type="text/javascript"></script>
    <script src="Scripts/services/authInterceptorService.js" type="application/javascript"></script>
    <script src="Scripts/services/authService.js" type="application/javascript"></script>
    <script src="Scripts/services/tasksService.js" type="application/javascript"></script>
    <script src="Scripts/services/projectsService.js" type="application/javascript"></script>
    <script src="Scripts/services/usersService.js" type="application/javascript"></script>
    <script src="Scripts/services/projectService.js" type="application/javascript"></script>
    <script src="Scripts/services/adminService.js" type="application/javascript"></script>
    <script src="Scripts/services/statisticService.js" type="application/javascript"></script>
    <script src="Scripts/controllers/loginController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/signupController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/indexController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/tasksController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/projectsController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/usersController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/projectController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/adminController.js" type="application/javascript"></script>
    <script src="Scripts/controllers/statisticController.js" type="application/javascript"></script>
    <script src="Scripts/loading-bar.min.js" type="application/javascript"></script>
    <script src="Scripts/date.min.js" type="application/javascript"></script>
</body>
</html>
